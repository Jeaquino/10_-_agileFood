<%- include("./partials/head.ejs") %>
<%- include("./partials/header.ejs") %>-
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <form class="mtx" method="POST" action="/products/create" enctype="multipart/form-data">
                <div class="contenedor col-12">
                    <div class="col-md-10 mb-3">
                        <label for="validationCustom01">Producto</label>
                        <input type="text" class="form-control" placeholder="Ingrese nombre del producto" name="nombre"
                            value="">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="col-md-5 mb-3">
                        <label for="validationCustom02">Precio</label>
                        <input type="number" class="form-control" placeholder="Ingrese precio $" value="" name="precio">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="col-md-5 mb-3">
                        <label for="validationCustom02">Descuento</label>
                        <input type="number" class="form-control" placeholder="Porcentaje de descuento" value=""
                            name="descuento">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="contenedor">
                    <div class="col-md-5 mb-3 m-1">
                        <label class="col-4 col-md-4" for="">Categoria</label>
                        <select class="col-8" name="categoria" value="">
                            <% categorias.forEach( element => { %>
                            <option value="<%- element.dataValues.idCategoria %>"> <%-element.dataValues.nombre%>
                            </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-md-5 mb-3 m-1">
                        <label class="col-4 col-md-4" for="">Clasificacion</label>
                        <select class="col-8" name="categoria" value="">
                            <option>Oferta del dia</option>
                            <option>Mas vendidos</option>
                            <option>Sector Saludable</option>
                            <option>Bebidas</option>
                            <option>Recomendacion del cheff</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-3 m-1">
                        <label class="col-4 col-md-4" for="">Cantidad</label>
                        <input type="number" placeholder="Stock disponible" name="stock" value="">
                    </div>
                </div>
                <div class="form-group col-9">
                    <label for="exampleFormControlTextarea1">Detalle del producto</label>
                    <textarea class="form-control" placeholder="Ingrese descripcion del producto" name="descripcion"
                        value="" rows="3"></textarea>
                </div>
                <div class="form-group col-10 col-xl-6">
                    <div class="custom-file mt-4">
                        <input type="file" class="custom-file-input " lang="en" name="image">
                        <label class="custom-file-label">Seleccione una imagen</label>
                    </div>
                </div>
                <div class="col-10 d-flex justify-content-between">
                    <button type="submit" class="btn btn-success col-4 mb-3">Subir Producto</button>
                    <button type="submit" class="btn btn-info col-4 mb-3">Reset</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4">
            <h1>Previsualizaci√≥n</h1>
            <h2 class="text-center">Producto</h2>
            <figure>
                <img src="../images/productos/img-tarta-jamon-y-queso.jpg" class="img-fluid" alt="vistaPrevia">
            </figure>
            <h3 class="text-right">Importe$$</h3>
            <p class=" col-lg-12 blockquote text-left">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sed,
                itaque. Tenetur architecto tempore odio? Id quas voluptatum, maiores, inventore esse, possimus
                voluptates officia illum expedita dolore dolorum ipsam laudantium molestias?</p>
        </div>
    </div>
</div>
<%- include("./partials/footer.ejs") %>